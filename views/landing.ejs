<!DOCTYPE html>
<html>

<head>
    <title>Museum Finder</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/landing.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js" type="text/javascript" async></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body>

    <div class="container">
        <% if(error && error.length > 0){ %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
            <% } %>
                <% if(success && success.length > 0){ %>
                    <div class="alert alert-success" role="alert">
                        <%= success %>
                    </div>
                    <% } %>
    </div>


    <div id="landing-header" class="container">
        <h1>Welcome to Museum Finder!</h1>
        <a href="/museums" class="btn btn-lg btn-success">View All Museums</a>

        <p>
            <form action="/museums" method="GET" class="form-inline" style="width: 50%; margin: 25px auto">
                <div class="form-group">
                    <input type="text" name="search" placeholder="Museum search..." class="form-control" />
                    <input type="submit" value="Search" class="btn btn-default" />
                </div>
            </form>
        </p>
    </div>

    <ul class="slideshow">
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
    </ul>



    <% include partials/footer %>